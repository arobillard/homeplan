.icon
  display flex
  position relative
  background transparent none no-repeat center center
  background-size contain
  vertical-align middle
  width 24px
  height 24px
  align-items center
  justify-content center
  svg, img
    width 100%
    height 100%

// Lists

.list-group, .list-group-flex
  padding 0
  list-style-type none

.list-group-flex
  display flex

// Show Hide

.hidden
  display none
